<div class= container>
	<% if params[:error].present? %>
	<p><%= params[:error] %></p>
	<% end %>
	<h1>Editing article</h1>
	<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text , :rows => "7" %>
	</p>
	<%= f.submit "SAVE", :class => "btn btn-primary" %>
	<% end %>
	<%= link_to 'Back', articles_path %>
</div>